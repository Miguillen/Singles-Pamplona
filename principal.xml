<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/background"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:contentDescription="@string/hello_world"
        android:padding="0dip"
        android:scaleType="centerCrop"
        android:src="@drawable/fondo"
        android:visibility="visible" />

    <ScrollView
        
        android:id="@+id/ScrollView01"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" >

            <ImageView
                android:id="@+id/plaza"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:adjustViewBounds="true"
                android:contentDescription="@string/hello_world"
                android:padding="0dip"
                android:src="@drawable/siliuetas"
                android:visibility="visible" />

            <TextView
                android:id="@+id/grupos"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/plaza"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/textview"
                android:clickable="true"
                android:drawableLeft="@drawable/ic_action_grupos"
                android:drawablePadding="10dp"
                android:gravity="left|center"
                android:onClick="irGrupos"
                android:padding="5dip"
                android:text="@string/grupos"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/actividades"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/grupos"
                android:layout_marginBottom="2dp"
                android:background="@drawable/textview"
                android:clickable="true"
                android:drawableLeft="@drawable/ic_action_eventos"
                android:drawablePadding="10dp"
                android:gravity="left|center"
                android:onClick="iractividades"
                android:padding="5dip"
                android:text="@string/actividades"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/eventos"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/actividades"
                android:layout_marginBottom="2dp"
                android:background="@drawable/textview"
                android:clickable="true"
                android:drawableLeft="@drawable/ic_action_actividades"
                android:drawablePadding="10dp"
                android:gravity="left|center"
                android:onClick="ireventos"
                android:padding="5dip"
                android:text="@string/eventos"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/discusiones"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/eventos"
                android:layout_marginBottom="2dp"
                android:background="@drawable/textview"
                android:clickable="true"
                android:drawableLeft="@drawable/ic_action_discusiones"
                android:drawablePadding="10dp"
                android:gravity="left|center"
                android:onClick="irdiscusiones"
                android:padding="5dip"
                android:text="@string/discusiones"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/chat"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/discusiones"
                android:layout_marginBottom="2dp"
                android:background="@drawable/textview"
                android:clickable="true"
                android:drawableLeft="@drawable/ic_action_chat"
                android:drawablePadding="10dp"
                android:gravity="left|center"
                android:onClick="irchat"
                android:padding="5dip"
                android:text="@string/chat"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/iniciar"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/chat"
                android:layout_marginBottom="2dp"
                android:background="@drawable/textview"
                android:clickable="true"
                android:drawableLeft="@drawable/ic_action_iniciar"
                android:drawablePadding="10dp"
                android:gravity="left|center"
                android:onClick="iniciarsesion"
                android:padding="5dip"
                android:text="@string/iniciar"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/usuarios"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/iniciar"
                android:layout_marginBottom="2dp"
                android:background="@drawable/textview"
                android:clickable="true"
                android:drawableLeft="@drawable/ic_action_contactos"
                android:drawablePadding="10dp"
                android:gravity="left|center"
                android:onClick="verUsuarios"
                android:padding="5dip"
                android:text="@string/usuarios"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </ScrollView>

</FrameLayout>